<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".EventCreationActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@color/md_theme_light_background">

        <!-- App Bar with Logo and Title -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/appLogo"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/icon_utaract_tranparent"
                android:contentDescription="@string/logo_utar_act" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/event_creation_form"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/md_theme_light_primary"
                android:layout_marginStart="16dp" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Event Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutEventName"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_event_name"
                    app:boxBackgroundColor="@color/md_theme_light_surface"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:hintTextColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etEventName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:textColor="@color/md_theme_light_onSurface"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Description -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutDescription"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_description"
                    app:boxBackgroundColor="@color/md_theme_light_surface"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:hintTextColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDescription"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top"
                        android:inputType="textMultiLine"
                        android:textColor="@color/md_theme_light_onSurface"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Date -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutDate"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_date"
                    app:boxBackgroundColor="@color/md_theme_light_surface"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:hintTextColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDate"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/md_theme_light_onSurface"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Time -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutTime"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_time"
                    app:boxBackgroundColor="@color/md_theme_light_surface"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:hintTextColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etTime"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:focusable="false"
                        android:clickable="true"
                        android:textColor="@color/md_theme_light_onSurface"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Location -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutLocation"
                    style="@style/Widget.Material3.TextInputLayout.FilledBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/hint_location"
                    app:boxBackgroundColor="@color/md_theme_light_surface"
                    app:boxStrokeColor="@color/md_theme_light_primary"
                    app:hintTextColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etLocation"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:textColor="@color/md_theme_light_onSurface"/>
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Category -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/category"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="8dp"/>

                <Spinner
                    android:id="@+id/spinnerCategory"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginBottom="24dp"/>

                <!-- Cover/Poster Upload -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cover_poster_image"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="8dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnUploadCover"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"
                        android:text="@string/upload_cover"
                        android:drawableLeft="@drawable/ic_menu_gallery"
                        android:backgroundTint="@color/md_theme_light_primary"
                        android:textColor="@color/md_theme_light_onPrimary"/>

                    <ImageView
                        android:id="@+id/ivCoverPreview"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginStart="16dp"
                        android:scaleType="centerCrop"
                        android:background="@color/md_theme_light_surfaceVariant"
                        android:visibility="gone"/>
                </LinearLayout>

                <!-- Additional Pictures Upload -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/additional_pic"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/md_theme_light_primary"
                    android:layout_marginBottom="8dp"/>

                <Button
                    android:id="@+id/btnUploadPictures"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="@string/upload_pic"
                    android:drawableLeft="@drawable/ic_menu_gallery"
                    android:backgroundTint="@color/md_theme_light_primary"
                    android:textColor="@color/md_theme_light_onPrimary"
                    android:layout_marginBottom="16dp"/>

                <!-- Additional Pictures Preview -->
                <LinearLayout
                    android:id="@+id/layoutPicturesPreview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp"/>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <Button
                        android:id="@+id/btnReset"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/btn_reset"
                        android:layout_marginEnd="8dp"
                        android:backgroundTint="@color/md_theme_light_error"
                        android:textColor="@color/md_theme_light_onError"/>

                    <Button
                        android:id="@+id/btnCreate"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="@string/btn_create_event"
                        android:layout_marginStart="8dp"
                        android:backgroundTint="@color/md_theme_light_primary"
                        android:textColor="@color/md_theme_light_onPrimary"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

