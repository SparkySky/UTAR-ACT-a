<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Title Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:counterMaxLength="100">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newsTitleInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="News Title"
                android:maxLines="2"
                android:textSize="18sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Message Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:counterMaxLength="500">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/newsMessageInput"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:hint="News Message"
                android:inputType="textMultiLine"
                android:maxLines="10"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Image Upload Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Upload Images (Max 5)"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnUploadNewsImages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:text="Select Images"
            style="@style/Widget.Material3.Button.OutlinedButton" />

        <!-- Image Preview Layout -->
        <LinearLayout
            android:id="@+id/newsImagePreviewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal"
            android:visibility="gone" />

        <!-- Create/Update Button -->
        <Button
            android:id="@+id/btnCreateNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Create News"
            style="@style/Widget.Material3.Button" />

        <Button
            android:id="@+id/btnDeleteNews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Delete News"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_marginTop="8dp" />

    </LinearLayout>

</ScrollView>