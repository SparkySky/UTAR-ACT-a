<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meow.utaract">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTARACT">

        <!--Notification service-->
        <service
            android:name=".firebase.FirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <activity
            android:name=".activities.LoginActivity"
            android:exported="true">

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="utaract.page.link"
                    android:pathPrefix="/verify"
                    android:scheme="https" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="utar-act.firebaseapp.com" android:scheme="https"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.UTARACT.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.MainActivity">
        </activity>

        <!-- Set exported based on whether other apps can launch it -->
        <activity
            android:name=".activities.SignupActivity"/>
        <activity
            android:name=".activities.GuestFormActivity"/>
        <activity
            android:name=".activities.EventCreationActivity"/>
        <activity
            android:name=".activities.ManageEventsActivity"/>
        <activity
            android:name=".activities.EventDetailActivity"/>
        <activity
            android:name=".activities.ApplicantListActivity"/>
        <activity
            android:name=".activities.NewsActivity"
            android:exported="false"/>
        <activity
            android:name=".activities.ChatActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activities.NewsCreationActivity"/>
        <activity
            android:name=".activities.PortraitCaptureActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activities.NotificationActivity" />
        <activity android:name=".activities.TicketActivity" />
        <activity android:name=".activities.JoinedEventsActivity" />
    </application>

</manifest>