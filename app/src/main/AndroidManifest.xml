<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meow.utaract">
    <uses-permission android:name="android.permission.INTERNET" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="28" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.UTARACT">

        <activity
            android:name=".LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.UTARACT" >

            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data
                    android:host="utaract.page.link"
                    android:pathPrefix="/verify"
                    android:scheme="https" />
            </intent-filter>

            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data android:host="utar-act.firebaseapp.com" android:scheme="https"/>
            </intent-filter>

        </activity>

        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.UTARACT.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.UTARACT">
        </activity>

        <!-- Set exported based on whether other apps can launch it -->
        <activity
            android:name=".SignupActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".GuestFormActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".EventCreationActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".ManageEventsActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".EventDetailActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".ApplicantListActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".NewsActivity"
            android:exported="false"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".chat.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".NewsCreationActivity"
            android:theme="@style/Theme.UTARACT" />
        <activity
            android:name=".PortraitCaptureActivity"
            android:screenOrientation="portrait"
            android:theme="@style/zxing_CaptureTheme" />
    </application>

</manifest>